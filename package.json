{
  "name": "hardhat-multibaas-plugin",
  "version": "0.3.1",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "hardhat",
    "multibaas",
    "mb",
    "curvegrid",
    "ethereum"
  ],
  "lint-staged": {
    "*.{json}": [
      "yarn prettier --write"
    ],
    "*.{js,ts}": [
      "yarn prettier --write",
      "yarn eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "description": "A helper plugin for integrating MultiBaas into Hardhat",
  "author": "Curvegrid",
  "files": [
    "lib/*.js",
    "lib/*.ts"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "lint": "yarn eslint . --ext .ts",
    "lint:fixAll": "yarn lint --fix",
    "format": "yarn prettier \"**/*.{js,ts,md,json,yml}\" --write --ignore-path .gitignore"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@openzeppelin/hardhat-upgrades": "^3.0.1",
    "axios": "^1.6.5",
    "ethers": "^6.9.2",
    "hardhat": "^2.19.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.7",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^6.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
